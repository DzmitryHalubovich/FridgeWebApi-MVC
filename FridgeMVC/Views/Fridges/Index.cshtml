@model IEnumerable<FridgeManager.DAL.DTO.Fridge.FridgeIndexDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    @*<a class="btn btn-primary" asp-action="Create">Create New</a>*@
    <a class="btn btn-info" onclick="createModal({ url: '/Fridges/Create/' })"
            data-toggle="ajax-modal" data-target="Modal">
        Create New
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OwnerName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OwnerName)
            </td>
            <td>
               @* @Html.ActionLink("Update", "Update", new { id=item.Id }) |*@
                <div style="display:flex;">
@*                    <div class="card-body">
                            <a asp-action="Edit" asp-controller="Fridges" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    </div>*@
                    @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                    @*<a asp-action="DeleteGet" asp-controller="Fridges" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>*@

                    <div >
                        <button class="btn btn-danger" onclick="deleteModal({ url: '/Fridges/DeleteGet', data: '@item.Id' })"
                                data-toggle="ajax-modal" data-target="Modal">
                            Delete
                        </button>
                            <button class="btn btn-info" onclick="deleteModal({ url: '/Fridges/UpdateFridge', data: '@item.Id' })"
                                data-toggle="ajax-modal" data-target="Modal">
                            Update
                        </button>
                    </div>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts{

    <script src="~/js/modal.js"></script>

}
